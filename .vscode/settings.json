{
  // Don't let CMake Tools auto-configure (west handles builds)
  "cmake.configureOnOpen": false,

  // Use compile_commands.json generated by west for IntelliSense
  "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",

  // Optional: treat .h as C, not C++
  "files.associations": {
    "*.h": "c",
    "cmath": "c",
    "complex": "c",
    "cstdlib": "c"
  }
}